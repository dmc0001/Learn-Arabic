<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="vertical"
            android:background="@drawable/custom_shapes">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/arabic_language" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Completed"
                android:textColor="#0ED290"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:layout_marginLeft="54dp"

                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0% of Arabic"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#565454"
                android:textSize="22dp"
                android:layout_marginLeft="54dp"

                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_Activity"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="54dp"
            android:layout_gravity="end"
            android:layout_marginTop="36dp"
            android:background="@drawable/custom_shapes1"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/one" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"

                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 1"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"

                ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numbers"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"

                    ></TextView>
            </LinearLayout>
        </LinearLayout> <LinearLayout
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:id="@+id/familyMembers_Activity"
        android:layout_gravity="end"
        android:layout_marginTop="36dp"

        android:background="@drawable/custom_shapes1">
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/family" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson 2"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#565454"
                android:layout_marginLeft="20dp"

                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Members"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"

                ></TextView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:layout_gravity="end"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_shapes1">
            <LinearLayout
                android:layout_width="360dp"
                android:id="@+id/colors_Activity"
                android:layout_height="102dp"
                android:layout_gravity="end"

                android:layout_marginTop="36dp"
                android:background="@drawable/custom_shapes1"
                >

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/colour" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lesson 3"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#565454"

                        ></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Colors"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18dp"

                        ></TextView>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="102dp"
            android:layout_gravity="end"

            android:id="@+id/phrass_Activity"
            android:layout_marginTop="36dp"
            android:background="@drawable/custom_shapes1">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/left_quotes" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesson 4"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#565454"
                    android:layout_marginLeft="20dp"

                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phrases"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginLeft="20dp"

                    ></TextView>
            </LinearLayout>

    </LinearLayout>

</LinearLayout>
   </LinearLayout>
